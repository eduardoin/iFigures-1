<div class="container">
<div class="row">
    <div class="col-md-6 col-md-offset-3">

      <%= simple_form_for @figure do |f| %>
        <% if @figure.errors.any? %>
          <div class="errors-container">
            <ul>
              <% @figure.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="fields">
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :brand %>
            <%= f.text_field :brand, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_field :description, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :price %>
            <%= f.text_field :price, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :address %>
            <%= f.text_field :address, class: 'form-control' %>
          </div>
        </div>
      </div>
  </div>
      <div class="col-md-8 col-md-offset-2">
        <div class="pictures-box">
          <div class="form-group">
            <div id="pictures">

              <%= f.simple_fields_for :pictures do |picture| %>
                <%= render 'picture_fields', f: picture %>
              <% end %>

              <div class="links">
                <%= link_to_add_association "Add a new photo", f, :pictures, class: 'new-photo-btn btn btn-default btn-xs', data: { association_insertion_node: '#pictures', association_insertion_method: :prepend }  %>
              </div>

            </div>
          </div>
        </div>

        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
  </div>
</div>
